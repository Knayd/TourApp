<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/detail_toolbar">

            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/details_img"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintDimensionRatio="1:1"
                />

            <View
                android:id="@+id/view_website_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_background_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view_tel_container"
                app:layout_constraintStart_toEndOf="@id/details_img"
                app:layout_constraintBottom_toTopOf="@id/iv_location_icon"
                />

            <ImageView
                android:id="@+id/iv_detail_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_planet"
                app:layout_constraintBottom_toBottomOf="@id/view_website_container"
                app:layout_constraintEnd_toStartOf="@id/details_website"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/view_website_container"
                app:layout_constraintTop_toTopOf="@id/view_website_container" />

            <TextView
                android:id="@+id/details_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/visit"
                android:textAllCaps="true"
                android:textColor="?colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_detail_website"
                app:layout_constraintEnd_toEndOf="@id/view_website_container"
                app:layout_constraintStart_toEndOf="@id/iv_detail_website"
                app:layout_constraintTop_toTopOf="@id/iv_detail_website" />

            <View
                android:id="@+id/view_tel_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background_normal"
                app:layout_constraintBottom_toBottomOf="@id/view_website_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view_website_container"
                app:layout_constraintTop_toTopOf="@id/view_website_container" />

            <ImageView
                android:id="@+id/iv_detail_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_phone"
                app:layout_constraintBottom_toBottomOf="@id/view_tel_container"
                app:layout_constraintEnd_toStartOf="@id/details_tel"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/view_tel_container"

                app:layout_constraintTop_toTopOf="@id/view_tel_container" />

            <TextView
                android:id="@+id/details_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/call"
                android:textAllCaps="true"
                android:textColor="?colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_detail_tel"
                app:layout_constraintEnd_toEndOf="@id/view_tel_container"
                app:layout_constraintStart_toEndOf="@id/iv_detail_tel"
                app:layout_constraintTop_toTopOf="@id/iv_detail_tel" />


            <TextView
                android:id="@+id/tv_detail_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/direction"
                android:textAllCaps="true"
                android:textColor="?colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iv_location_icon"
                app:layout_constraintTop_toTopOf="@id/iv_location_icon"
                app:layout_constraintBottom_toBottomOf="@id/iv_location_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                />

            <ImageView
                android:id="@+id/iv_location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_location"
                app:layout_constraintStart_toEndOf="@id/details_img"
                app:layout_constraintTop_toBottomOf="@id/view_website_container" />

            <TextView
                android:id="@+id/details_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/details_img"
                app:layout_constraintTop_toBottomOf="@id/iv_location_icon"
                tools:text="Location Placeholder" />

            <fragment
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_location"
                tools:context="com.example.applaudo.tourguideapp.activities.DetailsActivity"
                map:mapType="normal"
                map:layout_constraintStart_toEndOf="@id/details_img"
                map:layout_constraintBottom_toBottomOf="@id/details_img"
                />

            <View
                android:id="@+id/view_location_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_img" />


            <TextView
                android:id="@+id/details_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_location_divider"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Description Placeholder"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                />

        </android.support.constraint.ConstraintLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>