<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.VisitLaterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/visit_later_toolbar"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:title="@string/visit_later"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/visit_later_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/visit_later_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/iv_empty_places"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_location_off"
        app:layout_constraintBottom_toTopOf="@id/tv_empty_places"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/visit_later_toolbar"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        />

    <TextView
        android:id="@+id/tv_empty_places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_places_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_empty_places"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        />

</android.support.constraint.ConstraintLayout>